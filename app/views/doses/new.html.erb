 <div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1> Add a dose </h1>
        <%= simple_form_for {clocktail, dose} do |f| %>
          <%= f.label :decription%>
          <%= f.input :decription%>
          <%= f.association :ingredient, input_html:{class: "beautiful-dropdown"}%>

          <%= f.submit class: 'btn btn-primary' %>
       <%end %>
    </div>
  </div>
</div>
